---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Aegis Linux - Security by Default, Beauty by Design",
  description = "A security-focused Arch Linux distribution with AppArmor, kernel hardening, and the beautiful Hyprland desktop. Perfect for developers and content creators.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://aegis.computer/images/og-image.png"
    />
    <meta property="og:url" content="https://aegis.computer" />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://aegis.computer/images/og-image.png"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Theme color -->
    <meta name="theme-color" content="#1e1e2e" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=inter:400,500,600,700|jetbrains-mono:400,500,600,700"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-base text-text">
    <slot />
  </body>
</html>
