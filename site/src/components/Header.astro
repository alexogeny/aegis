---
const navLinks = [
  { href: "/#features", label: "Features" },
  { href: "/developers", label: "Developers" },
  { href: "/creators", label: "Creators" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 px-4 py-3">
  <nav
    class="mx-auto max-w-6xl flex items-center justify-between bg-base/85 backdrop-blur-md border border-surface0 rounded-xl px-6 py-3 shadow-lg shadow-crust/20 hover:shadow-mauve/10 transition-shadow duration-500"
  >
    <!-- Logo -->
    <a
      href="/"
      class="group flex items-center gap-2 text-mauve font-bold text-xl font-mono"
    >
      <div class="relative">
        <svg
          class="w-8 h-8 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-12"
          viewBox="0 0 32 32"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M16 2L4 8v8c0 7.732 5.268 14.924 12 16 6.732-1.076 12-8.268 12-16V8L16 2z"
            stroke="currentColor"
            stroke-width="2"
            fill="none"
            class="group-hover:stroke-pink transition-colors duration-300"
          ></path>
          <path
            d="M16 8v8m-4-4h8"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"></path>
        </svg>
        <div
          class="absolute inset-0 bg-mauve/30 blur-lg rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>
      </div>
      <span class="relative">
        Aegis
        <span
          class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-mauve to-pink group-hover:w-full transition-all duration-300"
        ></span>
      </span>
    </a>

    <!-- Nav Links -->
    <div class="hidden md:flex items-center gap-6">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="relative text-subtext1 hover:text-text transition-colors duration-200 py-1 group"
          >
            {link.label}
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-mauve group-hover:w-full transition-all duration-300 rounded-full" />
          </a>
        ))
      }
    </div>

    <!-- CTA -->
    <a
      href="/download"
      class="group relative bg-mauve hover:bg-pink text-crust font-semibold px-5 py-2 rounded-lg transition-all duration-300 overflow-hidden hover:shadow-lg hover:shadow-mauve/30 hover:-translate-y-0.5"
    >
      <span class="relative z-10 flex items-center gap-1">
        Download
        <svg
          class="w-4 h-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
          ></path>
        </svg>
      </span>
      <div
        class="absolute inset-0 bg-gradient-to-r from-pink to-mauve opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
      </div>
    </a>
  </nav>
</header>

<style>
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  header nav::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(203, 166, 247, 0.3),
      transparent
    );
    opacity: 0;
    transition: opacity 0.3s;
  }

  header nav:hover::after {
    opacity: 1;
    animation: shimmer 2s ease-in-out infinite;
  }
</style>
