                    <div class="w-2 h-2 rounded-full bg-green/80"></div>
                  </div>
                  <div class="p-2 font-mono text-[9px] text-text">
                    <div class="text-green">$ neofetch</div>
                    <div class="text-mauve mt-1">aegis</div>
                  </div>
                </div>
                <!-- Mini Window -->
                <div
                  class="absolute right-4 top-8 w-36 bg-base/95 rounded-lg border border-surface0 shadow-xl animate-float"
                  style="animation-delay: -2s;"
